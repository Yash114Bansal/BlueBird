# Bookings Service Environment Configuration
# Copy this file to .env and update with your actual values

# Zero SDK Configuration
ZERO_TOKEN=your-zero-token-here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=evently
DB_USER=evently
DB_PASSWORD=evently123
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ISOLATION_LEVEL=READ_COMMITTED
DB_ENABLE_AUTOCOMMIT=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USE_TLS=false

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Cache TTL Configuration (in seconds)
CACHE_TTL_BOOKINGS=60
CACHE_TTL_AVAILABILITY=30
CACHE_TTL_USER_BOOKINGS=300
CACHE_TTL_EVENT_CAPACITY=10

# High Consistency Configuration
LOCK_TIMEOUT_SECONDS=30
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=100
ENABLE_DISTRIBUTED_LOCKS=true
ENABLE_OPTIMISTIC_LOCKING=true
TRANSACTION_TIMEOUT_SECONDS=60

# Booking Configuration
MAX_BOOKING_QUANTITY=10
BOOKING_HOLD_DURATION_MINUTES=15
ENABLE_BOOKING_VALIDATION=true
ENABLE_CAPACITY_CHECKS=true
ENABLE_DUPLICATE_PREVENTION=true